<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.SobrePage"
             Title="Sobre"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

        <Label Text="Sobre o Aplicativo"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="{StaticResource Primary}"
               HorizontalOptions="Center"/>

        <Label Text="Desenvolvido por: Thiago Nogueira"
               FontSize="18"
               TextColor="Black"
               HorizontalOptions="Center"/>

        <Label Text="Ano de criação: 2025"
               FontSize="18"
               TextColor="Black"
               HorizontalOptions="Center"/>

        <Button Text="Voltar"
                Clicked="Voltar_Clicked"
                HorizontalOptions="Center"
                Margin="20"/>

    </VerticalStackLayout>
</ContentPage>
